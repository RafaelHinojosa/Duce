<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Theme.Duce"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar"
        >

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/receiver_blue</item>
        <item name="colorPrimaryVariant">@color/prussian_blue</item>
        <item name="colorOnPrimary">@color/honeydew</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style
        name="ToolbarThemeOverlay"
        parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <item name="android:fontFamily">@font/breadley_sans_regular</item>

    </style>

</resources>