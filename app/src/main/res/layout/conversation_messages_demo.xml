<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Received Message -->
    <TextView
        android:id="@+id/tvReceivedMessage"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/received_message_background"
        android:maxWidth="400dp"
        android:text="@string/large_message_sample"
        android:textColor="@color/black"
        />
    <!-- Translate Button -->
    <Button
        android:id="@+id/btnTranslate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tvReceivedMessage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        app:icon="@drawable/translate"
        />
    <!-- Sent Message -->
    <TextView
        android:id="@+id/tvSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/sent_message_background"
        android:maxWidth="400dp"
        android:text="@string/large_message_sample"
        android:textColor="@color/black"
        />
</RelativeLayout>