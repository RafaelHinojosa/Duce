<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationActivity"
    >
    <!-- Chat/Profile Picture -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        tools:srcCompat="@tools:sample/avatars"
        />
    <!-- Flag -->
    <TextView
        android:id="@+id/tvFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:hint="@string/flag_hint"
        android:textColor="@color/black"
        />
    <!-- Username -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFlag"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tvFlag"
        android:hint="@string/username_sample_1"
        android:textColor="@color/black"
        />
    <!-- Settings Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/tvUsername"
        android:clickable="true"
        app:srcCompat="@drawable/settings"
        />
    <!-- Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        android:layout_below="@+id/ivProfilePicture"
        />
    <!-- Compose Message -->
    <EditText
        android:id="@+id/etComposeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvMessages"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:hint="@string/compose_message"
        />
</RelativeLayout>
