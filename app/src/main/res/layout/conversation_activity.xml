<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="duce.ConversationActivity"
    >

    <!-- Chat/Profile Picture -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/cristiano"
        tools:srcCompat="@tools:sample/avatars"
        />

    <!-- Flag -->
    <TextView
        android:id="@+id/tvFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:hint="@string/flag_hint"
        android:textColor="@color/black"
        />

    <!-- Username -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFlag"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/btnSettings"
        android:layout_toEndOf="@+id/tvFlag"
        android:hint="@string/username_sample_1"
        android:textColor="@color/rich_black_fogra_29"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignEnd="@+id/rlSend"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/settings"
        app:tint="@color/prussian_blue"
        />

    <!-- Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlSend"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:screenReaderFocusable="true"
        android:transcriptMode="alwaysScroll"
        />

    <RelativeLayout
        android:id="@+id/rlSend"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/etComposeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/fabSend"
            android:layout_alignBottom="@+id/fabSend"
            android:layout_marginStart="5dp"
            android:gravity="top"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:hint="@string/compose_message"
            android:inputType="textMultiLine"
            android:maxLength="1032"
            android:imeOptions="actionDone"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:clickable="true"
            android:contentDescription="@string/send"
            android:gravity="center"
            android:backgroundTint="@android:color/holo_green_dark"
            android:src="@drawable/send"
            app:tint="@color/honeydew"
            />

    </RelativeLayout>

</RelativeLayout>