<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="duce.ConversationActivity"
    >

    <!-- Chat/Profile Picture -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/cristiano"
        tools:srcCompat="@tools:sample/avatars"
        />

    <!-- Flag -->
    <TextView
        android:id="@+id/tvFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:hint="@string/flag_hint"
        android:textColor="@color/black"
        />

    <!-- Username -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFlag"
        android:layout_toStartOf="@+id/btnSettings"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tvFlag"
        android:layout_marginEnd="20dp"
        android:hint="@string/username_sample_1"
        android:textColor="@color/black"
        />

    <!-- Settings Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignEnd="@+id/rlSend"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        app:srcCompat="@drawable/settings"
        />

    <!-- Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlSend"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:screenReaderFocusable="true"
        android:transcriptMode="alwaysScroll" />

    <RelativeLayout
        android:id="@+id/rlSend"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/etComposeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ibSend"
            android:layout_alignBottom="@+id/ibSend"
            android:gravity="top"
            android:hint="@string/compose_message"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="10"
            />

        <ImageButton
            android:id="@+id/ibSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/send"
            android:src="@drawable/send"
            android:textSize="18sp"
            />

    </RelativeLayout>

</RelativeLayout>

