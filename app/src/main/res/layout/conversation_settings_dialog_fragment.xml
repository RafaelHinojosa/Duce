<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <!-- Title of Dialog -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="@string/select_languages"
        android:textColor="@color/black"
        android:textSize="25dp"
        />

    <!-- Select Language Text -->
    <TextView
        android:id="@+id/tvReceivingLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_margin="20dp"
        android:text="@string/receiving_language"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <!-- Receiving Messages Language -->
    <Spinner
        android:id="@+id/spSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReceivingLanguage"
        android:layout_margin="20dp"
        android:entries="@array/languages_array"
        android:prompt="@string/sp_select_language_prompt"
        android:spinnerMode="dialog"
        />

    <!-- Save Changes -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spSelectLanguage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:imeOptions="actionDone"
        android:text="@string/save"
        />

</RelativeLayout>