<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="40dp"
    android:paddingRight="15dp"
    android:clipToPadding="false"
    >

    <ImageView
        android:id="@+id/ivProfileMe"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tvDescription"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/profile_pic_me"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:layout_toLeftOf="@+id/ivProfileMe"
        android:background="@drawable/outgoing_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="12dp"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:elevation="2dp"
        android:textSize="18dp"
        android:maxLines="10"
        android:textColor="@color/white"
        android:hint="@string/short_message_sample"
        />

</RelativeLayout>