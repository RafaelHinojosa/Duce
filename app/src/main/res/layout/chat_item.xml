<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <!-- Flag -->
    <TextView
        android:id="@+id/tvFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:hint="@string/flag_hint"
        android:textColor="@color/black"
        />

    <!-- Username -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFlag"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/tvFlag"
        android:hint="@string/username_sample_1"
        android:textColor="@color/black"
        />

    <!-- Sender Last Message -->
    <TextView
        android:id="@+id/tvSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFlag"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:hint="@string/username_sample_1"
        />

    <!-- Last Message -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSender"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/tvSender"
        android:hint="@string/description_sample"
        android:maxLines="1" />

    <!-- Date Sent -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFlag"
        android:layout_marginStart="2dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/tvDescription"
        android:hint="@string/date_sample" />

    <!-- Conversation Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_marginStart="15dp"
        android:background="?android:attr/listDivider"
        />

</RelativeLayout>